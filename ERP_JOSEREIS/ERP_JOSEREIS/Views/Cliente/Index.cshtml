@model IEnumerable<ERP_JOSEREIS.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Cliente PF", "CreatePF")
    @Html.ActionLink("Novo Cliente PJ", "CreatePJ")

</p>
<table>
    <tr>
        <th>Nome</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Pessoa.Nome
        </td>
        <td>
            @item.Preferencial
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdCliente }) |
            @Html.ActionLink("Exibir", "Details", new { id=item.IdCliente }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IdCliente })
        </td>
    </tr>
}

</table>
